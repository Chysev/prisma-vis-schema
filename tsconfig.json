{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": ".",
    "outDir": "./build",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "types": ["node", "./src/types/index.d.ts"],
    "paths": {
      "@/*": ["./src/*"],
      "@prisma/*": ["./prisma/build/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "build", "ui"]
}
